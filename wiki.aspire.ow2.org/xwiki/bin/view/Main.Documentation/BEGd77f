	&lt;span class="xml&amp;#45;tag"&gt;&amp;#60;output includeTag=&lt;span class="xml&amp;#45;quote"&gt;"true"&lt;/span&gt; includeRawHex=&lt;span class="xml&amp;#45;quote"&gt;"true"&lt;/span&gt;
	includeRawDecimal=&lt;span class="xml&amp;#45;quote"&gt;"true"&lt;/span&gt; includeEPC=&lt;span class="xml&amp;#45;quote"&gt;"true"&lt;/span&gt; includeCount=&lt;span class="xml&amp;#45;quote"&gt;"true"&lt;/span&gt; /&amp;#62;&lt;/span&gt;
